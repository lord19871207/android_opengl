<resources>

    <color name="window_bg">#282828</color>
    <color name="primary">#0288d1</color>
    <color name="primary_dark">#01579b</color>

    <style name="AppTheme" parent="android:Theme.Material.NoActionBar.TranslucentDecor">
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="settings_container">
        <item name="android:padding">5dp</item>
    </style>

    <style name="settings_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#C8C8C8</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
